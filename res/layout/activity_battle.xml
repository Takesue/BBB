<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battle_bg"
    android:orientation="vertical"
    android:paddingLeft="5dp" >

    <TextView
        android:id="@+id/battle_enemyName"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/lifepoint_bg"
        android:paddingLeft="5dp"
        android:text="対戦相手（CPU）"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/battle_enemyLp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/lifepoint_bg"
        android:paddingLeft="5dp"
        android:text="LP:"
        android:textColor="#000000" />
    
    <com.ict.apps.bobb.bobbactivity.BattleLayout
        android:id="@+id/battle_base_layout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        >
    </com.ict.apps.bobb.bobbactivity.BattleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >

        <TextView
            android:id="@+id/battle_myLp"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/lifepoint_bg"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:text="LP:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/battle_timelimit"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/lifepoint_bg"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:text="制限時間："
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
    
</LinearLayout>