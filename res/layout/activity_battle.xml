<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battle_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/battle_enemyName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/lifepoint_bg"
                android:ellipsize="end"
                android:paddingLeft="5dp"
                android:scrollHorizontally="true"
                android:text="対戦相手:"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/lifepoint_bg" >

                <TextView
                    android:id="@+id/battle_enemyLp"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:scrollHorizontally="true"
                    android:text="LP"
                    android:textColor="#000000" />

                <ProgressBar
                    android:id="@+id/battle_enemyLifebar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:max="4000"
                    android:minWidth="280dip"
                    android:progress="4000"
                    android:progressDrawable="@drawable/progressbar" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center" >

            <TextView
                android:id="@+id/spe_card1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/cards"
                android:gravity="center"
                android:text="特C"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/spe_card2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/cards"
                android:gravity="center"
                android:text="特C"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/spe_card3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/cards"
                android:gravity="center"
                android:text="特C"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
        
    </LinearLayout>
    
    <com.ict.apps.bobb.bobbactivity.BattleLayout
        android:id="@+id/battle_base_layout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        >
    </com.ict.apps.bobb.bobbactivity.BattleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@drawable/lifepoint_bg" >

            <TextView
                android:id="@+id/battle_myLp"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:text="LP"
                android:textColor="#000000" />

            <ProgressBar
                android:id="@+id/battle_myLifebar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_weight="1"
                android:progressDrawable="@drawable/progressbar"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:max="4000"
                android:minWidth="280dip"
                android:progress="4000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:layout_weight="2">
            
            <TextView
                android:id="@+id/battle_timelimit"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/lifepoint_bg"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:text="制限時間："
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>