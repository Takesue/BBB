<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:background="@drawable/battle_bg" >

    <TextView
        android:id="@+id/battle_enemyName"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:text="対戦相手（CPU）"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/battle_enemyLp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:text="LP:"
        android:textColor="#ffffff" />
    
    <com.ict.apps.bobb.bobbactivity.BattleLayout
        android:id="@+id/battle_base_layout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        >
    </com.ict.apps.bobb.bobbactivity.BattleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >

        <TextView
            android:id="@+id/battle_myLp"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:text="LP:"
            android:textSize="18sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/battle_timelimit"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="制限時間："
            android:textSize="18sp"
            android:textColor="#ffffff" />

    </LinearLayout>
    
</LinearLayout>